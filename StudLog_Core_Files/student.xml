<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/credit"
        android:layout_width="85dp"
        android:layout_height="41dp"
        android:layout_marginTop="124dp"
        android:gravity="center"
        android:hint="credits"
        app:layout_constraintEnd_toEndOf="@+id/credit1"
        app:layout_constraintHorizontal_bias="0.775"
        app:layout_constraintStart_toStartOf="@+id/credit1"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/credit1"
        android:layout_width="83dp"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:hint="credits"
        app:layout_constraintEnd_toEndOf="@+id/credit2"
        app:layout_constraintHorizontal_bias="0.774"
        app:layout_constraintStart_toStartOf="@+id/credit2"
        app:layout_constraintTop_toBottomOf="@+id/credit"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/credit2"
        android:layout_width="87dp"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:hint="credits"
        app:layout_constraintEnd_toEndOf="@+id/credit3"
        app:layout_constraintHorizontal_bias="0.783"
        app:layout_constraintStart_toStartOf="@+id/credit3"
        app:layout_constraintTop_toBottomOf="@+id/credit1"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/credit3"
        android:layout_width="87dp"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:hint="credits"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.783"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/credit2"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/dif"
        android:layout_width="71dp"
        android:layout_height="41dp"
        android:layout_marginTop="124dp"
        android:gravity="center"
        android:hint="diff"
        app:layout_constraintBottom_toTopOf="@+id/dif1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.441"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/dif2"
        android:layout_width="75dp"
        android:layout_height="39dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:hint="diff"
        app:layout_constraintBottom_toTopOf="@+id/dif3"
        app:layout_constraintEnd_toEndOf="@+id/dif1"
        app:layout_constraintStart_toStartOf="@+id/dif1"
        app:layout_constraintTop_toBottomOf="@+id/dif1"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/dif3"
        android:layout_width="83dp"
        android:layout_height="40dp"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:hint="diff"
        app:layout_constraintEnd_toEndOf="@+id/dif2"
        app:layout_constraintHorizontal_bias="0.625"
        app:layout_constraintStart_toStartOf="@+id/dif2"
        app:layout_constraintTop_toBottomOf="@+id/dif2"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/dif1"
        android:layout_width="79dp"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:hint="diff"
        app:layout_constraintEnd_toEndOf="@+id/dif"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="@+id/dif"
        app:layout_constraintTop_toBottomOf="@+id/dif"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/buttonSub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="416dp"
        android:text="Submit"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.218"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonBac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Back"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonSub" />

    <EditText
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="124dp"
        android:hint="CLASS 1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:hint="CLASS 2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="16dp"
        android:hint="CLASS 3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="16dp"
        android:hint="CLASS 4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="375dp"
        android:layout_height="62dp"
        android:layout_marginTop="36dp"
        android:text="For the diff input please rate your class from 1 to 3. One being the easiest and three being the hardest"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.805"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonGPA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="416dp"
        android:layout_marginEnd="72dp"
        android:text="GPA"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>