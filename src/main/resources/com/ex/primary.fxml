<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="12.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ex.PrimaryController">
   <children>
      <Button fx:id="aboutButton" text="About StudLog" onAction="#switchToSecondary"/>
   </children>
   <children>
      <Label text="Input Units:"/>
      <TextField fx:id="unitInput" layoutX="50.0" layoutY="30.0"/>
      <Button fx:id="primaryButton" text="Calculate" onAction="#switchToSecondary"/>
   </children>
   <padding>
      <Insets bottom="20.0" left="50.0" right="50.0" top="20.0" />
   </padding>
</VBox>
